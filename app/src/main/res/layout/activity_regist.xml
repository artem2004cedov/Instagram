<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Login.RegistActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/layout_email"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:src="@drawable/pfofaleicon" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ТЕЛЕФОН"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Эл.АДРЕС"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/text_prost"
                    android:text="Телефон"
                    android:textAlignment="center" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:text="Телефон"
                    android:textAlignment="center" />
            </LinearLayout>

            <EditText
                android:id="@+id/ed_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/ed_text_bagraund"
                android:hint="Электронный адрес"
                android:padding="15dp"
                android:textSize="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_next_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="150dp"
                android:background="@drawable/buuton_bacraundprozratni"
                android:text="далее"
                android:textColor="@color/whiteprozrathi"
                android:textSize="11dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_registr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="130dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:text="ИМЯ И ПАРОЛЬ"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/ed_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ed_text_bagraund"
                android:hint="Имя и Фамилия"
                android:padding="15dp"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/ed_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/ed_text_bagraund"
                android:hint="Пароль"
                android:padding="15dp"
                android:password="true"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textPasswordIncorrect"
                android:visibility="gone"
                android:paddingVertical="10dp"
                android:layout_width="match_parent"
                android:textSize="11dp"
                android:textColor="#C80B0B"
                android:text="Пароль должен содержать не менее 6 символов."
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:id="@+id/checkbox"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Запомнить пароль"
                android:textColor="#AAA9A9"
                android:textSize="11dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_next_registr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/buuton_bacraundprozratni"
                android:text="Продолжить с синхранизацией контактов"
                android:textColor="@color/whiteprozrathi"
                android:textSize="10dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Продолжить без синхронизации контактов"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="145dp"
                android:textColor="@color/sinii_92_prozrathni" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_finis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Зарегистрироваться как"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Имя пользователя можно будет изменить в любой
                            момент."
                android:textAlignment="center"
                android:textSize="12dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_registr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:background="@drawable/buuton_bacraund"
                android:text="Зарегистрироваться"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/changeName_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Изменить имя пользователя"
                android:textAlignment="center"
                android:layout_marginBottom="30dp"
                android:textColor="@color/sinii_92"
                android:textSize="10dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_name"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Изменить имя пользователя"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выберите имя пользователя для вашего аккаунта. Вы всегда можите изменить его."
                android:textAlignment="center"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/ed_usernameChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/ed_text_bagraund"
                android:hint="имя пользователя"
                android:padding="15dp"
                android:textSize="12dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_next_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/buuton_bacraund"
                android:text="Далее"
                android:textColor="@color/white"
                android:textSize="11dp" />

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="16dp"
        android:id="@+id/linearBottom"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:textSize="10dp"
            android:text="Нажимая Зарегистрироватся, вы принимааете следущие документы: Условия,Политику использования данных и политику в отношениифайлов cookie."
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_prost" />

        <LinearLayout
            android:id="@+id/liner_perexot_nazad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_bot_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Ужес есть аккаунт?"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/text_bot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Войдите"
                android:textColor="@color/sinii_92_prozrathni"
                android:textSize="10dp" />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>