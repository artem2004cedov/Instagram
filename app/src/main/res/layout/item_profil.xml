<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="11dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_prof"
        android:paddingHorizontal="4dp"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProf"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/profilo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="126dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавьте свое имя"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавьте имя и фамилию," />

            <TextView
                android:id="@+id/text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="чтобы друзья знали, что это вы" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bttext"
                android:layout_width="115dp"
                android:layout_marginTop="15dp"
                android:text="Изменить имя"
                android:textSize="9dp"
                android:textStyle="bold"
                android:background="@drawable/item_prof"
                android:layout_height="28dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>