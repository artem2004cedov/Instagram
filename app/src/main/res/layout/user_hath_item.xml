<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_that"
        android:layout_width="50dp"
        android:src="@drawable/profilo"
        android:layout_height="50dp"
        android:layout_margin="10dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginStart="49dp"
        android:id="@+id/thatDotUser"
        android:layout_marginTop="42dp"
        android:layout_width="14dp"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:layout_height="14dp"
        android:src="@drawable/doticon" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/profile_that"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="1dp"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView

            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="11dp" />
    </LinearLayout>


        <ImageView
            android:layout_width="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="14dp"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true"
            android:layout_height="30dp"
            android:src="@drawable/camerausericon" />

</RelativeLayout>