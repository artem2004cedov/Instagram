        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sinii_92</item>
        <item name="colorSecondaryVariant">@color/sinii_92</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item xmlns:tools="NewApi" name="android:windowLightStatusBar">true</item>

    </style>

    <style name="noBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

